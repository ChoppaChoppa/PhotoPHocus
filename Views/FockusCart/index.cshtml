@model FockusCartViewModels

<div class="container marketing">
    @foreach (var el in Model.fockusCart.listFockusItem)
    {
        <hr class="featurette-divider">
            <b>Продукт:</b> @el.product.Name<br />
            <p><img src="@el.product.img" alt="@el.product.Name"></p>
            <b>Цена:</b> @el.product.Price.ToString("c")
            <p><a class="btn btn-danger " asp-controller="FockusCart" asp-action="removeToCart" asp-route-id="@el.id">Удалить продукт</a></p>
        
    }
    <hr class="featurette-divider md-5 mt-5">
    <a class="btn btn-danger mb-5" asp-controller="Order" asp-action="Checkout">Оформить заказ</a>
</div>